---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inconsolata:wght@200..900&family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>Blog</title>
  </head>
  <body>
    <nav>
      <ul class="pl-[10rem]">
        <li>
          <a href="/">home</a>
        </li>
        <li>
          <a href="/projects/">projects</a>
        </li>
        <li>
          <a href="/blog/">blog</a>
        </li>
        <li>
          <a href="/listening/">listening</a>
        </li>
        <li>
          <a href="/reading/">reading</a>
        </li>
        <li>
          <a href="/about/">about</a>
        </li>
      </ul>
    </nav>
    <div id="content">
      <slot />
    </div>
  </body>
</html>

<style>
  html,
  body {
    background-color: #fcfbf4;
    margin: 0;
    width: 100%;
    height: 100%;
    display: flex;
  }

  nav {
    display: inline-block;
    width: auto;
    height: 100vh;
    font-family: "incosolota";
    font-size: 1.5rem;
    padding-right: 10rem;
  }

  ul {
    width: auto;
    margin-top: 10rem;
  }

  li {
    color: #222222;
    margin-bottom: 2rem;
    width: auto;
  }

  a {
    display: inline-block;
  }

  a::after {
    content: "";
    display: block;
    width: 0%;
    right: 0;
    left: auto;
    height: 3px;
    background: #000;
    transition: width 0.2s ease-in-out;
    border-radius: 5px;
  }

  a:hover::after {
    width: 100%;
  }

  #content {
    flex-grow: 1;
    overflow-y: auto;
  }
</style>
